@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Icon = "icon-search";
    ViewBag.HeaderSummary = "PIN Code Verification";
    ViewBag.Title = "Search List";
    ViewBag.MenuName = "Search";
}
@model CRL.UI.MVC.Areas.Search.Models.ViewPageModels.ViewSearchesViewModel

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "verifyform" }))
{
   @Html.AntiForgeryToken()  
    <div style ="text-align:center">
        <div class="alert alert-info text-center">Please enter your PIN code and click on 'View My Searches' button to view searches associated with this code.</div>
        <br />
        <div class="container-fluid" >
            <div class="row-fluid">
                <div class="span12">       

        <div class="span2"></div>
        <div class="span8">
            <div class="control-group">
                <div class="controls">
                    @Html.TextBoxFor(model => model.PublicUserSecurityCode ,new {autocomplete = "off",@Placeholder="PIN Code"})
                </div>
                <div class="text-center">
                </div>
                <input id="Submit" class="btn btn-primary" type="submit" value="View My Searches" />
            </div>
        </div>

        <div class="span2"></div>
    </div>
            </div>
        </div>
    </div>
   
    
}