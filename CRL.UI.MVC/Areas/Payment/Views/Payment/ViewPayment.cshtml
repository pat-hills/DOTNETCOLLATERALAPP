                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.Client)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.Client)
                    </dd>
                      @if (Model.PaymentView.IsPublicUser)
                      {
                       <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.SecurityCode)
                    </dt>
                  
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.SecurityCode)
                    </dd>  }
                    <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.Payee)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.Payee)
                    </dd>
                       <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.PublicUserEmail)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.PublicUserEmail)
                    </dd>                   
                       <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.Paypoint )
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.Paypoint )
                    </dd>
                       <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.PaypointUser )
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.PaypointUser )
                    </dd>
                          <dt>
                        @Html.DisplayNameFor(model => model.PaymentView.T24TransactionNo  )
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PaymentView.T24TransactionNo )
                    </dd>




                </dl>
            </div>
        </div>
    </div>
</div>


