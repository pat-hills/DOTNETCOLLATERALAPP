@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Payment Summary View";
    ViewBag.Icon = "icon-money";
    ViewBag.HeaderSummary = "Summary view of payment";
    ViewBag.MenuName = "Payment";
}
@model CRL.UI.MVC.Areas.Payment.Models.ViewPageModels.PaymentViewModel
@using CRL.Service.Views.FinancialStatement
@using CRL.UI.MVC.HTMLHelpers
